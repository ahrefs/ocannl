; A non-crash run counts as a success for moons_demo_parallel_run.

(test
 (name moons_demo_parallel_run)
 (package neural_nets_lib)
 (modules moons_demo_parallel_run)
 (deps ocannl_config)
 (libraries ocannl)
 (preprocess
  (pps ppx_ocannl)))

(executable
 (name micrograd_demo_logging)
 (modules micrograd_demo_logging)
 (libraries ocannl)
 (preprocess
  (pps ppx_ocannl)))

(rule
 (action
  (with-stdout-to
   micrograd_demo_logging.log
   (run
    %{dep:micrograd_demo_logging.exe}
    "--ocannl_debug_backend=text"
    "--ocannl_log_main_domain_to_stdout=true"))))

(rule
 (alias runtest)
 (action
  (diff micrograd_demo_logging.expected.log micrograd_demo_logging.log)))

(library
 (name tutorials)
 (package neural_nets_lib)
 (inline_tests
  (deps ocannl_config))
 (libraries base dynlink ocannl)
 (modules
  einsum_trivia
  hello_world_op
  micrograd_demo
  zero2hero_1of7
  primitive_ops
  moons_demo_parallel)
 (preprocess
  (pps ppx_here ppx_expect ppx_inline_test ppx_ocannl))
 (modes best))
