(library
 (name arrayjit)
 (public_name arrayjit)
 (libraries
  base
  core
  printbox
  printbox-text
  npy
  stdio
  str
  ctypes
  ctypes.foreign
  saturn_lockfree
  poll
  (select
   gcc_backend.ml
   from
   (gccjit -> gcc_backend.gccjit.ml)
   (-> gcc_backend.missing.ml))
  (select
   cuda_backend.ml
   from
   (cudajit -> cuda_backend.cudajit.ml)
   (-> cuda_backend.missing.ml))
  ppx_minidebug.runtime)
 (preprocess
  (pps ppx_jane ppx_minidebug))
 (modules
  utils
  rand
  ops
  ndarray
  indexing
  tnode
  low_level
  assignments
  backend_utils
  cc_backend
  gcc_backend
  cuda_backend
  backends)
 (modes byte native))

(library
 (name ppx_arrayjit)
 (public_name arrayjit.ppx_arrayjit)
 (modules ppx_helper)
 (libraries base ppxlib str)
 (preprocess
  (pps ppx_jane ppxlib.metaquot)))
